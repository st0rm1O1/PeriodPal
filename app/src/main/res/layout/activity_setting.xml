<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/activityBG"
    tools:context=".Activity.Setting">

    <androidx.cardview.widget.CardView
        android:id="@+id/settingCardV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="?attr/activityBG"
        app:cardElevation="80dp"
        app:cardMaxElevation="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backSBTN"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleX="1.4"
                    android:scaleY="1.4"
                    android:src="@drawable/ic_back"
                    app:tint="?attr/txtBG" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/semibold"
                    android:paddingStart="12dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="16dp"
                    android:text="Settings"
                    android:textColor="?attr/txtBG"
                    android:textSize="22dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height=".8dp"
                android:background="?attr/lineBG" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/rootLayoutSetting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/settingCardV"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:overScrollMode="never"
        android:scrollbarSize="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="18dp"
            android:paddingTop="24dp"
            android:paddingEnd="18dp"
            android:paddingBottom="34dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:paddingStart="8dp"
                android:paddingTop="16dp"
                android:paddingEnd="8dp"
                android:paddingBottom="10dp"
                android:text="My-Profile"
                android:textColor="?attr/subBG"
                android:textSize="19dp"
                android:visibility="gone" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="14dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/cardBG"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="100dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="18dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="18dp"
                        android:paddingBottom="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/medium"
                            android:gravity="center_vertical"
                            android:text="Period Length"
                            android:textColor="?attr/txtBG"
                            android:textSize="16dp"
                            app:drawableStartCompat="@drawable/ic_blood" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/semibold"
                            android:gravity="center_vertical|end"
                            android:maxLines="1"
                            android:textSize="16dp"
                            tools:text="7 Days" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".7dp"
                        android:background="?attr/lineBG" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingStart="18dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="18dp"
                        android:paddingBottom="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/medium"
                            android:gravity="center_vertical"
                            android:text="Period Length"
                            android:textColor="?attr/txtBG"
                            android:textSize="16dp"
                            app:drawableStartCompat="@drawable/ic_blood" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/semibold"
                            android:gravity="center_vertical|end"
                            android:maxLines="1"
                            android:textSize="16dp"
                            tools:text="7 Days" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".7dp"
                        android:background="?attr/lineBG" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingStart="18dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="18dp"
                        android:paddingBottom="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/medium"
                            android:gravity="center_vertical"
                            android:text="Period Length"
                            android:textColor="?attr/txtBG"
                            android:textSize="16dp"
                            app:drawableStartCompat="@drawable/ic_blood" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/semibold"
                            android:gravity="center_vertical|end"
                            android:maxLines="1"
                            android:textSize="16dp"
                            tools:text="7 Days" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".7dp"
                        android:background="?attr/lineBG" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingStart="18dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="18dp"
                        android:paddingBottom="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/medium"
                            android:gravity="center_vertical"
                            android:text="Period Length"
                            android:textColor="?attr/txtBG"
                            android:textSize="16dp"
                            app:drawableStartCompat="@drawable/ic_blood" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/semibold"
                            android:gravity="center_vertical|end"
                            android:maxLines="1"
                            android:textSize="16dp"
                            tools:text="7 Days" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="10dp"
                android:text="My-Profile"
                android:textColor="?attr/subBG"
                android:textSize="19dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="14dp"
                android:clickable="false"
                android:focusable="true"
                app:cardBackgroundColor="?attr/cardBG"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="100dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/periodLengthBTN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:foreground="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingStart="18dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="18dp"
                        android:paddingBottom="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/medium"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text="Period Length"
                            android:textColor="?attr/txtBG"
                            android:textSize="18dp"
                            app:drawableStartCompat="@drawable/ic_blood" />

                        <TextView
                            android:id="@+id/periodLengthValueSTV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:fontFamily="@font/semibold"
                            android:gravity="center_vertical|end"
                            android:maxLines="1"
                            android:textSize="16dp"
                            tools:text="7 Days" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".7dp"
                        android:background="?attr/lineBG" />

                    <LinearLayout
                        android:id="@+id/cycleLengthBTN"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingStart="18dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="18dp"
                        android:paddingBottom="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/medium"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text="Cycle Length"
                            android:textColor="?attr/txtBG"
                            android:textSize="18dp"
                            app:drawableStartCompat="@drawable/ic_progress" />

                        <TextView
                            android:id="@+id/cycleLengthValueSTV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:fontFamily="@font/semibold"
                            android:gravity="center_vertical|end"
                            android:maxLines="1"
                            android:textSize="16dp"
                            tools:text="28 Days" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".7dp"
                        android:background="?attr/lineBG" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingStart="18dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="18dp"
                        android:paddingBottom="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/medium"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text="Ovulation &amp; Fertile"
                            android:textColor="?attr/txtBG"
                            android:textSize="18dp"
                            app:drawableStartCompat="@drawable/ic_fertile" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".7dp"
                        android:background="?attr/lineBG" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingStart="18dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="18dp"
                        android:paddingBottom="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/medium"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text="Pregnancy"
                            android:textColor="?attr/txtBG"
                            android:textSize="18dp"
                            app:drawableStartCompat="@drawable/ic_fetus" />

                        <Switch
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/semibold"
                            android:gravity="center_vertical|end"
                            android:maxLines="1"
                            android:maxHeight="48dp"
                            android:textSize="16dp" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:paddingStart="8dp"
                android:paddingTop="16dp"
                android:paddingEnd="8dp"
                android:paddingBottom="10dp"
                android:text="Reminders"
                android:textColor="?attr/subBG"
                android:textSize="19dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="14dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="?attr/cardBG"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="100dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:foreground="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingStart="18dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="18dp"
                        android:paddingBottom="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/medium"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text="Reminders"
                            android:textColor="?attr/txtBG"
                            android:textSize="18dp"
                            app:drawableStartCompat="@drawable/ic_bell" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:paddingStart="8dp"
                android:paddingTop="16dp"
                android:paddingEnd="8dp"
                android:paddingBottom="10dp"
                android:text="Personalize"
                android:textColor="?attr/subBG"
                android:textSize="19dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="28dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="?attr/cardBG"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="100dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:foreground="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingStart="18dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="18dp"
                        android:paddingBottom="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/medium"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text="Themes"
                            android:textColor="?attr/txtBG"
                            android:textSize="18dp"
                            app:drawableEndCompat="@drawable/ic_cat"
                            app:drawableStartCompat="@drawable/ic_theme" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/clearBTN"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="#BBDEFB"
                android:fontFamily="@font/semibold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Erase All Data"
                android:textColor="#01579B"
                android:textSize="19dp"
                app:cornerRadius="10dp"
                app:rippleColor="#B3E5FC" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="18dp"
                android:text="BETA - Version 1.0.4"
                android:textColor="?attr/subBG"
                android:textSize="13dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>